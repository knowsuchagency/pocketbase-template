package main

import (
	"log"
	"os"
	"strconv"

	"github.com/pocketbase/pocketbase"
	"github.com/pocketbase/pocketbase/core"

	"github.com/pocketbase/pocketbase/plugins/migratecmd"

	_ "{{ project_slug }}/migrations"
	"{{ project_slug }}/routes"
)

func main() {
	app := pocketbase.New()

	// Configure SMTP settings from environment variables
	app.OnBootstrap().BindFunc(func(e *core.BootstrapEvent) error {
		smtpUsername := os.Getenv("SMTP_USERNAME")
		smtpPassword := os.Getenv("SMTP_PASSWORD")
		smtpHost := os.Getenv("SMTP_HOST")
		smtpSenderName := os.Getenv("SMTP_SENDER_NAME")
		smtpSenderAddress := os.Getenv("SMTP_SENDER_ADDRESS")

		if smtpUsername != "" && smtpPassword != "" && smtpHost != "" {
			app.Settings().Meta.SenderName = smtpSenderName
			app.Settings().Meta.SenderAddress = smtpSenderAddress
			app.Settings().SMTP.Enabled = true
			app.Settings().SMTP.Host = smtpHost

			smtpPort := 587
			if portStr := os.Getenv("SMTP_PORT"); portStr != "" {
				if port, err := strconv.Atoi(portStr); err == nil {
					smtpPort = port
				}
			}
			app.Settings().SMTP.Port = smtpPort

			app.Settings().SMTP.Username = smtpUsername
			app.Settings().SMTP.Password = smtpPassword
			app.Settings().SMTP.AuthMethod = "PLAIN"
			app.Settings().SMTP.TLS = true

			log.Println("SMTP: ENABLED")
		} else {
			log.Println("SMTP: DISABLED (missing required environment variables)")
		}

		return e.Next()
	})

	devMode, _ := app.RootCmd.Flags().GetBool("dev")

	migratecmd.MustRegister(app, app.RootCmd, migratecmd.Config{
		// enable auto creation of migration files when making collection changes in the Dashboard
		// (use PocketBase's built-in --dev flag to enable it only during development)
		Automigrate: devMode,
		Dir:         "migrations",
	})

	if devMode {
		log.Println("Automigrate: ENABLED (development mode)")
	} else {
		log.Println("Automigrate: DISABLED (production mode)")
	}

	// In dev mode, strip X-Frame-Options to allow iframe embedding (e.g., Vibora browser preview)
	if devMode {
		app.OnServe().BindFunc(func(e *core.ServeEvent) error {
			e.Router.BindFunc(func(re *core.RequestEvent) error {
				err := re.Next()
				re.Response.Header().Del("X-Frame-Options")
				return err
			})
			return e.Next()
		})
	}

	app.OnServe().BindFunc(routes.Register)

	if err := app.Start(); err != nil {
		log.Fatal(err)
	}
}
